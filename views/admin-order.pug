include header
.container
    main
        h2.adminOrder__header Информация о заказах
            table(class='adminOrder__table')
                tr
                    th id
                    th date
                    th userId
                    th productsId
                    th productCost
                    th productAmount
                    th total
                    th user
                    th phone
                    th address
                each val, index in order
                    tr
                        td #{val['id']}
                        td #{val['human_date']}
                        td #{val['user_id']}
                        td #{val['products_id']}
                        td #{val['products_cost']}
                        td #{val['products_amount']}
                        td #{val['total'].toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$& ')}р.
                        td #{val['user']}
                        td #{val['phone']}
                        td #{val['address']}
        a(href="/admin")
            button.hiddenWindow__btn.hiddenWindow__btn_admin
                img(src='img/icons/leftArrow.png', alt='')
                | Назад
            